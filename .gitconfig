[user]
name = dfdeshom
email = dfdeshom@gmail.com

[url "git@github.com:"]
insteadOf = https://github.com/
 
[alias]
st = "status"
ci = "commit"
cia = "commit -a"
br = branch
co = checkout
revert = "checkout"
out = "log origin/master..master"
in = !git fetch && git log master..origin/master
head = "log -n 1 --pretty=fuller"

[core]
editor = "emacs"

[color]
ui = true

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta 
old = red 
new = green 

[color "status"]
added = yellow
changed = green
untracked = cyan

[branch]
autosetuprebase = always

[push]
default = current
[github]
user = dfdeshom
